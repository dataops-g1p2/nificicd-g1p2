# ============================================================================
# NiFi CI/CD - Development Environment Configuration
# ============================================================================
# IMPORTANT: Fill in all empty values before deployment
# Sensitive values should be managed via CI/CD secrets or Azure Key Vault

# ----------------------------
# NiFi Registry Configuration
# ----------------------------
NIFI_REGISTRY_PORT=18080
NIFI_REGISTRY_HOST=0.0.0.0
REGISTRY_URL=http://nifi-registry:18080        # Internal Docker network URL (used by NiFi to connect to Registry)
REGISTRY_EXTERNAL_URL=http://localhost:18080   # External URL (for accessing Registry UI)

# ------------------------
# NiFi Core Configuration
# ------------------------
NIFI_USERNAME=admin
NIFI_PASSWORD=                          # REQUIRED: Generate with 'openssl rand -base64 16' or set via CI/CD
NIFI_SENSITIVE_PROPS_KEY=               # REQUIRED: Generate with 'openssl rand -hex 12' or set via CI/CD
NIFI_ELECTION_MAX_WAIT="5 min"
NIFI_HTTPS_PORT=8443
NIFI_WEB_HTTPS_HOST=0.0.0.0
NIFI_URL=https://localhost:8443

# ----------------------------------------------
# VM Infrastructure (Auto-updated by Terraform)
# ----------------------------------------------
PUBLIC_IP=                              # Auto-populated by Terraform
VM_PUBLIC_IP=                           # Auto-populated by Terraform
NIFI_WEB_PROXY_HOST=                    # Auto-populated by Terraform (format: IP:8443)

# ------------------
# SSH Configuration
# ------------------
VM_SSH_PORT=22
VM_USERNAME=azureuser

# ------------------------
# Flow Export/Import
# ------------------------
FLOWS_DIR=./flows
OUTPUT_DIR=./flows
IMPORT_LATEST_ONLY=true
DEBUG=false